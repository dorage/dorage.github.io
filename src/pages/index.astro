---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ExternalLink from '../components/ExternalLink.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
            ul {
                list-style-type: none;
                padding: unset;
            }
            ul li {
                display: flex;
            }
            ul li time {
                flex: 0 0 130px;
                font-style: italic;
                color: #595959;
            }
            ul li a:visited {
                color: #8e32dc;
            }
            span {
                font-weight: 500;
            }
        </style>
    </head>
    <body>
        <main>
            <section>
                <h1>이강현<span class="f-16">, Front-end developer</span></h1>
                <p class="f-12">baloonflower554@gmail.com</p>
                <hr/>
                <h3>블로그</h3>
                <ExternalLink url="https://ilgae.github.io/" title='⛰️ 일산에 사는 개발자들' description='일산에 사는 개발자들의 블로그입니다' image='/images/placeholder/external-link.jpg'/>
                <h3>개인 프로젝트 / 사이드 프로젝트</h3>
                <ExternalLink url="https://www.notion.so/dorage/26ffd609afde46bdb2bb2fe728d6c245?v=a2d0cb02bde44990bb7b71710bca2cfe" title='🖼️ 개인 프로젝트' description='개인적으로 만들어본 프로젝트들입니다' image='/images/placeholder/external-link.jpg'/>
            </section>
        </main>
        <Footer />
    </body>
</html>
