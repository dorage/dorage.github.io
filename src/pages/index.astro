---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ExternalLink from '../components/ExternalLink.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../config';


---

<!DOCTYPE html>
<html lang='en'>
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
        <style>
            ul {
                list-style-type: none;
                padding: unset;
            }
            ul li {
                display: flex;
            }
            ul li time {
                flex: 0 0 130px;
                font-style: italic;
                color: #595959;
            }
            ul li a:visited {
                color: #8e32dc;
            }
            span {
                font-weight: 500;
            }
        </style>
    </head>
    <body>
        <main>
            <section>
                <h1>이강현<span class="f-16">, Front-end developer</span></h1>
                <p class="f-12">baloonflower554@gmail.com</p>
                <hr/>
                <ExternalLink url="https://vault.dorage.io" title='LeeKangHyun' description='' image='/images/placeholder/external-link.jpg'/>
            </section>
        </main>
        <Footer />
    </body>
</html>
